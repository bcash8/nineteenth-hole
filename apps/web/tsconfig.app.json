{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../packages/typescript-config/react-library.json",
  "compilerOptions": {
    "module": "ESNext", // override base for bundler
    "moduleResolution": "bundler", // Vite-specific
    "allowImportingTsExtensions": true, // Vite-specific
    "verbatimModuleSyntax": true, // Vite-specific
    "noEmit": true, // dev only
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo"
  },
  "include": ["src"]
}
